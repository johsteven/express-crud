<%- include("layouts/navbar") %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mb-4">Tambah Data Mahasiswa</h2>
                <form action="" method="POST">
                    <input type="hidden" name="id">
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" id="nama" name="nama" required autocomplete="off" autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required autocomplete="off">
                        <div id="emailHelp" class="form-text">Kami tidak pernah memberitahu email anda kepada siapapun.</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Tambah</button>
                </form>
            </div>
        </div>
    </div>